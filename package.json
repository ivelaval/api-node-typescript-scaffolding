    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
